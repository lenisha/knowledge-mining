{
  "dataSourceName": "__DATASOURCE_NAME__",
  "targetIndexName": "__INDEX_NAME__",
  "skillsetName": "__SKILLSET_NAME__",
  "schedule": {
    "interval": "PT5M",
    "startTime": "2021-01-01T00:00:00Z"
  },
  "fieldMappings": [
    {
      "sourceFieldName": "metadata_storage_path",
      "targetFieldName": "metadata_storage_path",
      "mappingFunction": { "name": "base64Encode" }
    },
    {
      "sourceFieldName": "metadata_storage_name",
      "targetFieldName": "metadata_storage_name"
    }
  ],
  "outputFieldMappings": [
   
    {
      "sourceFieldName": "/document/merged_content/distinct_organizations",
      "targetFieldName": "organizations"
    },
  
    {
      "sourceFieldName": "/document/merged_content/distinct_persons",
      "targetFieldName": "persons"
    },
    
    {
      "sourceFieldName": "/document/merged_content/distinct_locations",
      "targetFieldName": "locations"
    },
    {
      "sourceFieldName": "/document/merged_content/keyPhrases",
      "targetFieldName": "keyPhrases"
    },
    {
      "sourceFieldName": "/document/merged_content",
      "targetFieldName": "merged_content"
    },
   
    {
      "sourceFieldName": "/document/normalized_images/*/text",
      "targetFieldName": "text"
    },
    {
      "sourceFieldName": "/document/normalized_images/*/layoutText",
      "targetFieldName": "layoutText"
    },
    {
      "sourceFieldName": "/document/normalized_images/*/imageTags/*/name",
      "targetFieldName": "imageTags"
    }
    
    
  ],
  "parameters": {
    "batchSize": 1,
    "maxFailedItems": -1,
    "maxFailedItemsPerBatch": -1,
    "configuration": {
      "dataToExtract": "contentAndMetadata",
      "imageAction": "generateNormalizedImages"
    }
  }
}
